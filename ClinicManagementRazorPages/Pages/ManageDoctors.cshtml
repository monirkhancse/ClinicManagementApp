@page
@model ClinicManagementApp.ClinicManagementRazorPages.Pages.ManageDoctorsModel
@{
    ViewData["Title"] = "Manage Doctors";
}

<h2>Manage Doctors</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Available Slots</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.Doctors)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.AvailableSlots</td>
                <td>
                    <a href="/Doctors/Edit?doctorId=@doctor.DoctorID" class="btn btn-warning">Edit</a>
                    <a href="/Doctors/Delete?doctorId=@doctor.DoctorID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Doctors/Add" class="btn btn-primary">Add New Doctor</a>
