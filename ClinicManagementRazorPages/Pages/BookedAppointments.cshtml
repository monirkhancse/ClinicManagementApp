@page
@model ClinicManagementApp.ClinicManagementRazorPages.Pages.BookedAppointmentsModel
@{
    ViewData["Title"] = "Your Booked Appointments";
}

<h2>Your Booked Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Doctor</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model.Appointments)
        {
            <tr>
                <td>@appointment.Doctor.Name</td>
                <td>@appointment.AppointmentDate</td>
                <td>@appointment.Status</td>
                <td>
                    @if (appointment.Status == "Pending")
                    {
                        <a href="/Appointments/Cancel?appointmentId=@appointment.AppointmentID" class="btn btn-danger">Cancel</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
