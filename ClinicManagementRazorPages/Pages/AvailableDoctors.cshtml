@page
@model ClinicManagementApp.ClinicManagementRazorPages.Pages.AvailableDoctorsModel

@{
    ViewData["Title"] = "Available Doctors";
}

<h2>Available Doctors</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Specialization</th>
            <th>Available Slots</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.Doctors)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.AvailableSlots</td>
                <td>
                    <a href="/Appointments/Book?doctorId=@doctor.DoctorID" class="btn btn-primary">Book Appointment</a>
                </td>
            </tr>
        }
    </tbody>
</table>
