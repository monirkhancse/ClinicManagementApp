@page
@model ClinicManagementApp.ClinicManagementRazorPages.Pages.BookAppointmentModel
@{
    ViewData["Title"] = "Book Appointment";
}

<h2>Book Appointment</h2>

<form method="post">
    <div class="form-group">
        <label for="Doctor">Doctor</label>
        <select class="form-control" asp-for="Appointment.DoctorID" asp-items="Model.DoctorsSelectList"></select>
    </div>

    <div class="form-group">
        <label for="AppointmentDate">Appointment Date</label>
        <input type="datetime-local" class="form-control" asp-for="Appointment.AppointmentDate" />
    </div>

    <button type="submit" class="btn btn-primary">Book Appointment</button>
</form>
